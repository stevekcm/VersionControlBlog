@model IEnumerable<Post>
@{
    ViewData["Title"] = "Post";
}

<head>
    <meta charset="utf-8" />
    <!-- Font -->

    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500" rel="stylesheet">


    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/index/abc.css" rel="stylesheet" />
    <link href="~/css/index/responsive1.css" rel="stylesheet" />



</head>

                        <body>
                            <section class="blog-area section">
                                <div class="container">
                                    <div class="row">
                                        @foreach (var post in Model)
                                        {
                                            <div class="col-lg-11 col-md-12" >
                                                <div class="card h-100">
                                                    <div class="single-post post-style-2">

                                                        @*<div class="blog-image"><img src="~/images/DefaultBlogImage.png" alt="Blog Image"></div>*@

                                                        <div class="blog-info">

                                                            <h6 class="pre-title"><a href="#"><b>@post.Categories</b></a></h6>

                                                            <h4 class="title">
                                                                <a asp-action="Details" asp-route-id="@post.PostId">
                                                                    <b>
                                                                        @post.Title
                                                                    </b>
                                                                </a>
                                                            </h4>

                                                            <p>
                                                                @post.Introduction
                                                            </p>

                                                            <div class="avatar-area">
                                                                @*<a class="avatar" href="#"><img src="~/images/DefaultIcon.png" alt="Profile Image"></a>*@
                                                                @*<div class="right-area">*@
                                                                    <a class="name" href="#"><b>@post.Author</b></a>
                                                                    <h6 class="date" href="#">on @post.CreateTime</h6>
                                                                @*</div>*@
                                                            </div>

                                                            @*<ul class="title">*@
                                                                @*<li><a href="#"><ion-icon name="heart"></ion-icon>12</a></li>*@
                                                                @*<li><a href="#"><ion-icon name="chatbubbles"></ion-icon>  12</a></li>*@
                                                                @*<li><a href="#"><ion-icon name="eye"></ion-icon>12</a></li>*@
                                                            @*</ul>*@

                                                        </div><!-- blog-right -->

                                                    </div><!-- single-post extra-blog -->

                                                </div><!-- card -->
                                            </div><!-- col-lg-8 col-md-12 -->
                                        }
                                    </div>
                                </div>
                            </section>
                            <script src="https://unpkg.com/ionicons@4.5.0/dist/ionicons.js"></script>
                        </body>
